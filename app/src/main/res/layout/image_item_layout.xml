<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_together"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <ImageView
            android:id="@+id/uri_img"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/display_uri_name"
            android:text="@string/uri_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:padding="5dp"
            app:layout_constraintLeft_toRightOf="@id/uri_img"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/uri_path"
            android:text="@string/uripath"
            app:layout_constraintLeft_toRightOf="@id/uri_img"
            app:layout_constraintTop_toBottomOf="@id/display_uri_name"
            android:padding="5dp"
            android:layout_width="294dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>